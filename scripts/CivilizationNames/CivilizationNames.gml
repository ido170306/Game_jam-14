//argument0 : The current civ;
function CivilizationNames(argument0)
{
	switch (argument0)
	{
		case 0:
			return("-Settlement-");
		
		case 1:
			return("-Hamlet-");
		
		case 2:
			return("-Village-");
		
		case 3:
			return("-Town-");
		
		case 4:
			return("-City-");
		
		case 5:
			return("-Kingdom-");
		
		case 6:
			return("-Empire-");
		
		case 7:
			return("-Federation-");
		
		case 8:
			return("-Space Empire-");
		
		case 9:
			return("-Space Federation-");
	}
}